<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.watchwomen.gymstarsilver.NavigationMenuActivity">

<TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clocktext"
        android:textStyle="bold | italic"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:text="2:46 PM"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textAllCaps="false"
        />


    <DigitalClock android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/clock"
        android:textStyle="bold"
        android:textSize="50sp"
        android:visibility="gone"
        android:textColor="#ffffff" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/icon_bull_center1" />

    <com.lukedeighton.wheelview.WheelView
        android:id="@+id/wheelview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:wheelColor="@android:color/transparent"
        app:rotatableWheelDrawable="true"
        app:repeatItems="true"

        app:wheelRadius="180dp"
        app:wheelPadding="3dp"
        app:wheelItemRadius="62dp"/>

</RelativeLayout>