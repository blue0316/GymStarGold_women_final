<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/relative"
        android:background="@android:color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignBottom="@+id/mainLayout"
            android:layout_height="match_parent">

            <ImageSwitcher
                android:id="@+id/ImageSwitcher01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="178dp"
                android:layout_marginStart="178dp"
                android:layout_marginTop="75dp"
                android:background="@drawable/icon_bull_gazella_left"></ImageSwitcher>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/mainLayout"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/headerimg"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    android:layout_marginLeft="15dp"
                    android:textAllCaps="true"
                    android:text="Results"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"

                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_gravity="start"
                android:layout_weight="0.18"
                android:orientation="horizontal"
                android:textAlignment="viewStart"
                android:visibility="visible"
                android:weightSum="1">
                <!--TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Cal()"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" -->
                <TextView
                    android:id="@+id/dispcalorie"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text=""
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>


            <!--<ImageView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                android:layout_gravity="center"></ImageView>-->

            <LinearLayout
                android:id="@+id/timer_display"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--Button
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bbacground"
                    android:text="GyMSTAR TOTAL"
                    android:textSize="22dp"
                    android:textColor="@android:color/white"
                    android:visibility="invisible"
                    /-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/timeLayout"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/setdisplay"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/display_small_left"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/bbacground"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="SET- 1"
                        android:textColor="@android:color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Today"
                        android:textColor="@android:color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"

                        android:text="Last Result"
                        android:textColor="@android:color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lastresultdate"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="@dimen/display_top"
                        android:text="2018-03-29"
                        android:textColor="@android:color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bbacground"
                    android:text="REPS"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/display_left"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/disprepstoday"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="2/124"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/disprepslast"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0/0"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bbacground"
                    android:text="WEIGHT"
                    android:textAlignment="center"
                    android:layout_marginLeft="@dimen/display_left"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/dispweighttoday"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:text="40"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/dispweightlast"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bbacground"
                    android:text="TOTAL"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="@dimen/display_left"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/disptotaltoday"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="2520"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/disptotallast"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="200"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/display_left"
                    android:background="@drawable/bbacground"
                    android:text="GStarTl"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/dispGStarTltoday"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="2520"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/dispGStarTllast"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="200"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>